@using MMS.Core.Entities
@model List<AppUser>
@{
    ViewData["Title"] = "Məzunlar";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h2>Bizim Məzunlar</h2>
            <p>Tələbələrimizin uğur hekayələri</p>
        </div>
    </div>
    <div class="row">
        @foreach (var student in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm text-center p-3">
                    @if (!string.IsNullOrEmpty(student.ProfileImageUrl))
                    {
                        <img src="~/uploads/@student.ProfileImageUrl" class="card-img-top rounded-circle mx-auto" style="width: 120px; height: 120px; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/120" class="card-img-top rounded-circle mx-auto" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@student.FirstName @student.LastName</h5>
                        <h6 class="text-primary">@student.Profession</h6>
                        <p class="card-text text-muted">@student.University</p>
                        <p class="card-text"><b>@student.Degree</b> (@student.GraduationYear)</p>
                        <p class="small text-muted">"@student.About"</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>