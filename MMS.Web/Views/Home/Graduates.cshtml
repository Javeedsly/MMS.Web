@using MMS.Core.Entities
@model List<AppUser>
@{
    ViewData["Title"] = "Məzunlar";
}

<div class="container" style="padding-bottom: 50px;">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="section-heading text-center mb-5">
                <h4>Bizim <em>Məzunlar</em></h4>
                <img src="~/assets/images/heading-line-dec.png" alt="">
                <p>Universitetimizi bitirən uğurlu tələbələrimiz.</p>
            </div>
        </div>
    </div>

    <div class="row">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var student in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 text-center shadow border-0" style="border-radius: 15px; overflow: hidden;">
                        <div class="card-body p-4">
                            @if (!string.IsNullOrEmpty(student.ProfileImageUrl))
                            {
                                <img src="~/uploads/@student.ProfileImageUrl" class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #eee;" alt="Student">
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/120" class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #eee;" alt="Default">
                            }

                            <h5 class="card-title text-dark">@student.FirstName @student.LastName</h5>
                            <p class="text-muted mb-1">@(string.IsNullOrEmpty(student.Profession) ? "İş yeri qeyd olunmayıb" : student.Profession)</p>

                            <hr>

                            <p class="card-text text-start small">
                                <strong>Universitet:</strong> @(student.University ?? "-") <br>
                                <strong>İxtisas:</strong> @(student.Degree ?? "-") <br>
                                <strong>Məzun İli:</strong> @(student.GraduationYear == 0 ? "-" : student.GraduationYear.ToString())
                            </p>

                            @if (!string.IsNullOrEmpty(student.About))
                            {
                                <p class="card-text small text-muted"><em>"@student.About"</em></p>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-warning">Hələlik sistemdə qeydiyyatdan keçmiş məzun yoxdur.</div>
            </div>
        }
    </div>
</div>