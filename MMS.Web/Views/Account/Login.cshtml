@model MMS.Web.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Daxil ol";
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MMS</title>
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/assets/css/style.css" asp-append-version="true">
</head>
<body>

    <div class="auth-body-bg">
        <div class="container d-flex justify-content-center">

            <div class="auth-card">
                <div class="auth-sidebar">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/assets/images/white-logo.png" alt="MMS Logo" class="auth-logo" />
                    </a>
                    <h2 data-i18n="welcome">Xoş Gəlmisiniz!</h2>
                    <p>Karyeranızı bizimlə qurun və inkişaf etdirin.</p>

                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-sm px-4">
                            <i class="fas fa-home me-2"></i> Ana Səhifə
                        </a>
                    </div>
                </div>

                <div class="auth-main">
                    <div class="auth-header">
                        <h3 data-i18n="loginButton">Daxil ol</h3>
                        <p data-i18n="input_Email_password">Hesabınıza daxil olmaq üçün məlumatlarınızı yazın</p>
                    </div>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="modern-input-group">
                            <label asp-for="Email" class="modern-label">E-mail ünvanı</label>
                            <input asp-for="Email" type="email" class="modern-input" placeholder="nümunə@gmail.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="modern-input-group">
                            <label asp-for="Password" class="modern-label" data-i18n="password">Şifrə</label>
                            <input asp-for="Password" type="password" class="modern-input" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                                <label class="form-check-label text-muted" asp-for="RememberMe" data-i18n="rememberMe">
                                    Məni xatırla
                                </label>
                            </div>
                            <a asp-controller="Account" asp-action="ForgotPassword" class="text-primary small" style="text-decoration:none;">Şifrəni unutmusan?</a>
                        </div>

                        <button type="submit" class="btn-modern" data-i18n="loginButton">
                            Daxil ol <i class="fas fa-arrow-right"></i>
                        </button>

                        <button type="button" class="btn-google">
                            <img src="https://www.svgrepo.com/show/355037/google.svg" width="20" alt="Google" />
                            <span data-i18n="google">Google ilə davam et</span>
                        </button>

                        <div class="auth-footer">
                            <span data-i18n="noAccount">Hesabınız yoxdur?</span>
                            <a asp-action="Register" class="auth-link">Qeydiyyatdan keçin</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/js/lang.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>