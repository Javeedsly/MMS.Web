@model MMS.Web.ViewModels.ForgotPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Şifrəni unutmusan?";
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/assets/css/style.css" asp-append-version="true">
</head>
<body>
    <div class="auth-body-bg">
        <div class="auth-card" style="max-width: 500px; margin: auto;">
            <div class="auth-main" style="width: 100%;">
                <div class="text-center mb-4">
                    <img src="~/assets/images/logo.png" alt="Logo" style="width: 80px;" />
                    <h3 class="mt-3">Şifrəni bərpa et</h3>
                    <p class="text-muted">Email ünvanınızı daxil edin, sizə bərpa linki göndərək.</p>
                </div>

                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="modern-input-group">
                        <label asp-for="Email" class="modern-label">E-mail</label>
                        <input asp-for="Email" class="modern-input" placeholder="mail@example.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn-modern">
                        Link göndər <i class="fas fa-paper-plane"></i>
                    </button>

                    <div class="auth-footer mt-3">
                        <a asp-action="Login" class="auth-link"><i class="fas fa-arrow-left"></i> Girişə qayıt</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>