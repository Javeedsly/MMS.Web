@model MMS.Web.ViewModels.ResetPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Yeni Şifrə";
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/style.css" asp-append-version="true">
</head>
<body>
    <div class="auth-body-bg">
        <div class="auth-card" style="max-width: 500px; margin: auto;">
            <div class="auth-main" style="width: 100%;">
                <div class="text-center mb-4">
                    <h3>Yeni Şifrə Təyin Et</h3>
                </div>

                <form asp-action="ResetPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="Email" />

                    <div class="modern-input-group">
                        <label asp-for="Password" class="modern-label">Yeni Şifrə</label>
                        <input asp-for="Password" class="modern-input" placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="modern-input-group">
                        <label asp-for="ConfirmPassword" class="modern-label">Şifrəni Təsdiqlə</label>
                        <input asp-for="ConfirmPassword" class="modern-input" placeholder="••••••••" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn-modern">
                        Şifrəni Yenilə
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>